.container
  .row.well.well-leaderboard{'ng-controller': 'LeaderboardController as leaderboardCtrl'}
    %p.text-center
      %a.btn.btn-lg.btn-success{'ng-click': 'leaderboardCtrl.createGame()', 'role': 'button'} New game
    .col-md-6
      %h3.text-center Your last Games
      %table.table.table-striped
        %thead
          %th Played at
          %th Points
        %tbody
          %tr{'ng-repeat': 'game in leaderboardCtrl.lastGames'}
            %td {{game.ended_at | date:'medium'}}
            %td {{game.points}}
      %span Page {{leaderboardCtrl.lastGamesPage}} of {{leaderboardCtrl.lastGamesTotalPages}}
      .btn-group.btn-group-sm
        %button.btn.btn-default{'ng-class': '{"disabled": leaderboardCtrl.lastGamesPage == 1}', ng_click: 'leaderboardCtrl.lastGamesPreviousPage()'}
          %i.fa.fa-chevron-left.fa-lg
        %button.btn.btn-default{'ng-class': '{"disabled": leaderboardCtrl.lastGamesPage == leaderboardCtrl.lastGamesTotalPages}', ng_click: 'leaderboardCtrl.lastGamesNextPage()'}
          %i.fa.fa-chevron-right.fa-lg
    .col-md-6
      %h3.text-center Top Players
      %table.table.table-striped
        %thead
          %th User
          %th Total points
        %tbody
          %tr{'ng-repeat': 'player in leaderboardCtrl.topPlayers'}
            %td {{player.email}}
            %td {{player.total_points || 0}}
      %span Page {{leaderboardCtrl.topPlayersPage}} of {{leaderboardCtrl.topPlayersTotalPages}}
      .btn-group.btn-group-sm
        %button.btn.btn-default{'ng-class': '{"disabled": leaderboardCtrl.topPlayersPage == 1}', ng_click: 'leaderboardCtrl.topPlayersPreviousPage()'}
          %i.fa.fa-chevron-left.fa-lg
        %button.btn.btn-default{'ng-class': '{"disabled": leaderboardCtrl.topPlayersPage == leaderboardCtrl.topPlayersTotalPages}', ng_click: 'leaderboardCtrl.topPlayersNextPage()'}
          %i.fa.fa-chevron-right.fa-lg
